<Window x:Class="SpinMonitor.Views.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fingerprint" Height="520" Width="740"
        WindowStartupLocation="CenterOwner">
  <Grid Margin="12">
    <DataGrid x:Name="Grid"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True">
      <DataGrid.Columns>
        <DataGridTextColumn Header="MP3 name"   Binding="{Binding File}"   Width="2*"/>
        <DataGridTextColumn Header="Fingerprint creation" Binding="{Binding CreationDate, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="*"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</Window>